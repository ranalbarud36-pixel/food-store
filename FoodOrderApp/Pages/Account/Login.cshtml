@page
@model FoodOrderApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "כניסה";
    Layout = null;
}

<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>כניסה - EasyOrder</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="auth-bg">
        <div class="auth-card">
            <div class="text-center mb-4">
                <h2 class="fw-bold">ברוכים השבים!</h2>
                <p class="text-muted">התחברו כדי להזמין</p>
            </div>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">אימייל</label>
                    <input asp-for="Input.Email" class="form-control form-control-lg" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">סיסמה</label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-lg fw-bold mb-3">התחבר</button>
            </form>

            <div class="text-center border-top pt-3">
                <p class="mb-0">חדשים כאן? <a href="/Account/Register" class="text-decoration-none fw-bold text-warning">הירשמו עכשיו</a></p>
                <a href="/Index" class="small text-muted mt-2 d-inline-block">חזרה לדף הבית</a>
            </div>
        </div>
    </div>

</body>
</html>